{
  "name": "threejs-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate of three.js (use TypeScript)",
  "scripts": {
    "start": "webpack serve --mode development --config webpack.dev.js  --progress",
    "dev": "webpack --config webpack.dev.js --watch",
    "build": "yarn lint && webpack --config webpack.prod.js",
    "lint": "eslint src/ts --ext .ts,.tsx",
    "lint:fix": "eslint src/ts --ext .ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/36t/threejs-boilerplate"
  },
  "license": "ISC",
  "homepage": "https://github.com/36t/threejs-boilerplate#readme",
  "dependencies": {
    "three": "0.129.0"
  },
  "devDependencies": {
    "@types/dat.gui": "0.7.7",
    "@types/three": "0.128.0",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "autoprefixer": "10.2.5",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "5.2.4",
    "css-minimizer-webpack-plugin": "2.0.0",
    "dat.gui": "0.7.7",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.4.0",
    "file-loader": "6.2.0",
    "html-loader": "2.1.2",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.1",
    "image-webpack-loader": "7.0.1",
    "lint-staged": "11.0.0",
    "mini-css-extract-plugin": "1.6.0",
    "node-sass": "6.0.1",
    "postcss": "8.2.14",
    "postcss-loader": "6.1.1",
    "prettier": "2.2.1",
    "sass-loader": "11.0.1",
    "shader-loader": "1.3.1",
    "terser-webpack-plugin": "5.1.2",
    "ts-loader": "9.1.2",
    "ts-shader-loader": "1.0.6",
    "typescript": "4.2.4",
    "webpack": "5.36.2",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "lint-staged": {
    "*": [
      "lint"
    ]
  }
}