{
  "name": "threejs-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate of three.js (use TypeScript)",
  "scripts": {
    "start": "webpack serve --mode development --config webpack.dev.js  --progress",
    "dev": "webpack --config webpack.dev.js --watch",
    "build": "yarn lint && webpack --config webpack.prod.js",
    "lint": "eslint src/ts --ext .ts,.tsx",
    "lint:fix": "eslint src/ts --ext .ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/36t/threejs-boilerplate"
  },
  "license": "ISC",
  "homepage": "https://github.com/36t/threejs-boilerplate#readme",
  "dependencies": {
    "three": "0.126.1"
  },
  "devDependencies": {
    "@types/three": "0.126.0",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "autoprefixer": "10.2.5",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "5.1.2",
    "css-minimizer-webpack-plugin": "1.2.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.3.1",
    "file-loader": "6.2.0",
    "html-loader": "2.1.2",
    "html-webpack-plugin": "5.3.1",
    "husky": "4.3.8",
    "image-webpack-loader": "7.0.1",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.3.9",
    "node-sass": "5.0.0",
    "postcss": "8.2.8",
    "postcss-loader": "5.2.0",
    "prettier": "2.2.1",
    "sass-loader": "11.0.1",
    "shader-loader": "1.3.1",
    "terser-webpack-plugin": "5.1.1",
    "ts-loader": "8.0.18",
    "ts-shader-loader": "1.0.6",
    "typescript": "4.2.3",
    "webpack": "5.25.0",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "*": [
      "lint"
    ]
  }
}
